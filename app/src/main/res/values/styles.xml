<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="GetStartedTitle">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/get_start_title_text</item>
        <item name="android:fontFamily">@font/rubik</item>
    </style>

    <style name="GetStartedSubText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/get_start_title_subtext</item>
        <item name="android:fontFamily">@font/rubik</item>
    </style>

    <style name="GetStartedLegalText">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/get_start_legal_text</item>
        <item name="android:fontFamily">@font/rubik</item>
    </style>
</resources>